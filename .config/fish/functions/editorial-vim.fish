function editorial-vim
	if ! type -q tomlq
		echo "Error: tomlq is required for the script, but it is not installed, or not in the PATH."
		echo "You should install it by: cargo install tomlq"
		return 1
	end
	set toml_file translation.toml
	set id $argv[1]
	set file_orig {$id}.md
	if [ ! -e $file_orig ]
		echo "Error: "$file_orig" does not exist."
		return 1
	end
	if [ -e $toml_file ]
	else
		echo "Warning: "$toml_file" was not found."
	end
	vim -O -c"call EditorialMode()" {$argv[1]}en.md $argv[1].md
end

